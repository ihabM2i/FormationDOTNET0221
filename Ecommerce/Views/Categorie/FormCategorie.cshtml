
@{
    ViewData["Title"] = "FormCategorie";
}


<form asp-controller="Categorie" asp-action="SubmitFormCateogrie" method="post" class="col-10 p-1">
    <h1 class="row"><span class="col">Ajouter une catégorie</span></h1>
    <partial name="~/Views/Shared/MessagePartial.cshtml" />
    <div class="row m-1">
        <input type="text" name="Titre" placeholder="Titre de la catégorie" class="col form-control p-1" />
    </div>
    <div class="row m-1">
        <button type="submit" class="btn btn-outline-primary p-1 col">Valider</button>
    </div>
</form>


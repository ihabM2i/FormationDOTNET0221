@model List<Produit>
@{
    ViewData["Title"] = "Index";
}

<section class="col-10 produits p-1">
    <div class="row">
        @foreach(Produit p in Model)
        {
        <a class="produit col-3" asp-action="Detail" asp-controller="Produit" asp-route-id="@p.Id">
            <div class="row">
                <div class="col">
                    <img src="~/@p.Images[0].Url" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @p.Titre
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @p.Prix €
                </div>
            </div>
        </a>
        }
    </div>
</section>


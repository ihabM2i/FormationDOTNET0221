@model List<Categorie>
@{
    ViewData["Title"] = "Ajouter un produit";
}


<form asp-controller="Produit" asp-action="SubmitFormProduit" enctype="multipart/form-data" method="post" class="col-10 p-1">
    <h1 class="row"><span class="col">Ajouter un produit</span></h1>
    <partial name="~/Views/Shared/MessagePartial.cshtml" />
    <div class="row m-1">
        <input type="text" name="Titre" placeholder="Titre du produit" class="col form-control p-1" />
    </div>
    <div class="row m-1">
        <input type="text" name="Prix" placeholder="Prix du produit" class="col form-control p-1" />
    </div>
    <div class="row m-1">
        <textarea name="Description" class="col form-control p-1" placeholder="Description du produit"></textarea>
    </div>
    <div class="row m-1">
        <select name="CategoryId" class="col form-control p-1">
            @foreach(Categorie c in Model)
            {
                <option value="@c.Id">@c.Titre</option>
            }
        </select>
    </div>
    <div class="row m-1">
        <input type="file" name="images" multiple placeholder="Images du produit" class="col form-control p-1" />
    </div>
    <div class="row m-1">
        <button type="submit" class="btn btn-outline-primary p-1 col">Valider</button>
    </div>
</form>


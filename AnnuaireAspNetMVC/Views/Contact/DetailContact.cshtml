@model Contact
@{
    ViewData["Title"] = "DetailContact";
}
    <div class="container">
        @if (Model != null)
        {
            <h1>Detail Contact Id : @Model.Id</h1>
            <div class="row m-1">
                <div class="col">
                    Nom : @Model.Nom
                </div>
            </div>
            <div class="row m-1">
                <div class="col">
                    Prénom : @Model.Prenom
                </div>
            </div>
            <div class="row m-1">
                <div class="col">
                    Téléphone : @Model.Telephone
                </div>
            </div>
            <div class="row m-1">
                <div class="col">
                    <a asp-action="DeleteContact" asp-controller="Contact" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col alert-danger p-1">
                    Aucun contact avec cet id
                </div>
            </div>
        }
    </div>




@{
    ViewData["Title"] = "FormPersonne";
}

<h1>Formulaire personne</h1>
<form asp-action="SubmitFormPersonne" asp-controller="Accueil" class="container">
    <div class="row m-1">
        <input type="text" class="form-control col p-1" placeholder="Nom de la personne" name="nom" />
    </div>
    <div class="row m-1">
        <input type="text" class="form-control col p-1" placeholder="Prénom de la personne" name="prenom" />
    </div>
    <div class="row m-1">
        <button class="btn btn-primary col p-1" type="submit">Valider</button>
    </div>
</form>

